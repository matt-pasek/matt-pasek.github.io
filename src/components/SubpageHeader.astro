---
interface props {
    title: string,
    subtitle?: string,
    description: string
}

import '@fontsource-variable/nunito';

const { title, description, subtitle } = Astro.props;
const sublast = subtitle ? subtitle.split(' ').pop() : '';
const subrest = subtitle ? subtitle.split(' ').slice(0, -1).join(' ') : '';
---
<div class="flex flex-col items-center text-center font-nunito text-color">
    <h1 class="font-semibold text-lg xl:text-xl">
        <span class="text-accent">{ title } {subtitle && <span>-</span>}</span><br />
        { subtitle && (<span>{ subrest }<span class="text-accent"> { sublast }</span></span>)}
    </h1>
    <p class="text-xs w-3/4 sm:w-1/3">{ description }</p>
    <slot />
</div>